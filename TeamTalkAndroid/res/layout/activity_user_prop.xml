<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".UserPropActivity" >

    <TextView
        android:id="@+id/user_nicknamelabel"
        android:layout_column="0"
        android:layout_gravity="left|center_vertical"
        android:text="Nickname" />

    <TextView
        android:id="@+id/user_nickname"
        android:layout_column="1"
        android:layout_gravity="left|center_vertical" />

    <TextView
        android:id="@+id/user_usernamelabel"
        android:layout_column="0"
        android:layout_gravity="left|center_vertical"
        android:text="Username" />

    <TextView
        android:id="@+id/user_username"
        android:layout_column="1"
        android:layout_gravity="left|center_vertical" />

    <TextView
        android:id="@+id/user_vol_voicelabel"
        android:layout_column="0"
        android:layout_gravity="left|center_vertical"
        android:gravity="center"
        android:text="Voice Volume" />

    <SeekBar
        android:id="@+id/user_vol_voiceSeekBar"
        android:layout_column="1"
        android:gravity="center"
        android:layout_gravity="fill_horizontal" />

    <Switch
        android:id="@+id/user_mutevoiceSwitch"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="left"
        android:text="Mute Voice" />

    <TextView
        android:id="@+id/user_vol_medialabel"
        android:layout_column="0"
        android:layout_gravity="left|center_vertical"
        android:text="Media File Volume" />

    <SeekBar
        android:id="@+id/user_vol_mediaSeekBar"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal" />

    <Switch
        android:id="@+id/user_mutemediaSwitch"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="left"
        android:text="Mute Media File" />
    
    <Space 
        android:layout_height="match_parent"
        android:layout_columnSpan="2" />

</GridLayout>